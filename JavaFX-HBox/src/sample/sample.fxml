<!--Can apply CSS here, which is cool, adding a boarder can help with debugging elements-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller" alignment="BOTTOM_RIGHT"
      style="-fx-border-color: royalblue; -fx-border-width: 3; -fx-border-style: dashed"
      spacing="10">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <!--    Can force the buttons to be the same size-->
    <Button text="Okay" prefWidth="90"/>
    <Button text="Cancel" prefWidth="90"/>
    <Button text="Help" prefWidth="90"/>
</HBox>